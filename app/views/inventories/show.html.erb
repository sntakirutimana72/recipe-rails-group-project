<% if flash[:success] %>
  <div class="alert alert-info mt-4 container-fluid w-50 d-flex flex-column align-items-center" role="alert">
    <p><%= flash[:success] %></p>
  </div>
<% end %>
<div class="container-fluid w-50 d-flex flex-column align-items-center">
  <h1 class="mb-4"><%=@inventory.name%></h1>
  <%= link_to 'Add food', "/inventory_foods/#{@inventory.id}/new", class: "btn btn-primary align-self-end" %>
  <table class="table table-striped table-bordered w-100 mt-4">
    <thead>
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Quantity</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.food.name %></td>
          <td><%= food.quantity %></td>
          <td><%= button_to 'Delete', "/inventory_foods/#{@inventory.id}/destroy/#{food.id}", method: :delete, class: "btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>